<style>
  :root {
    --halcolor1: #20208c;
    --halcolor2: #ff4600;
  }
  .hal {
    /* background: linear-gradient(to right, var(--halcolor1), var(--halcolor2)); */
    --bs-btn-bg: var(--halcolor1);
    border-image-source: linear-gradient(
      to right,
      var(--halcolor1),
      var(--halcolor2)
    );

    border-image-slice: 1;
    border-bottom: 5px solid;
    padding-bottom: calc(var(--bs-btn-padding-y) - 5px);
    border-right-color: var(--halcolor1);
    color: white;
  }
</style>
<ul class="pub-list list">
  <% for (const item of items) { %>
  <li <%="metadataAttrs(item)" %>
    > <span class="listing-title lead"><%= item.title %></span><br />
    <span class="listing-author"><%= item.authors %></span><br />
    <span class="listing-publication fst-italic"><%= item.publication %></span>
    <span class="listing-date">(<%= item.date %>)</span><br />
    <a href="<%- item.path %>" class="btn btn-sm btn-primary"> Details </a>
    <% if (item.doi) { %>
    <a
      href="<%- item.doi %>"
      class="btn btn-sm btn-secondary"
      target="_blank"
      rel="noopener noreferrer"
    >
      DOI
    </a>
    <% } %> <% if (item.hal) { %>
    <a
      href="<%- item.hal %>"
      class="btn btn-sm btn-secondary hal"
      target="_blank"
      rel="noopener noreferrer"
    >
      HAL:<%- item.halid %>
    </a>
    <% } %> <% if (item.file) { %>
    <a
      href="<%- item.file %>"
      class="btn btn-sm btn-light"
      target="_blank"
      rel="noopener noreferrer"
    >
      <i class="bi bi-file-earmark-text"></i> file
    </a>
    <% } %>
    <span class="listing-categories"><%- item.categories %></span>
  </li>
  <% } %>
</ul>

